@page "{id}"
@model MyEMShop.EndPoint.Pages.Admin.Users.DeleteUserModel
@{
    ViewData["Title"] = "حذف کاربر";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    حذف کاربر
                </div>
                <div class="panel-body">
                    <form method="post">
                        <input type="hidden" name="userid" value="@ViewData["id"].ToString()" />
                        <dl class="dl-horizontal">
                            <dt>نام و نام خانوادگی :</dt>
                            <dd>@Model.showUser.Name  @Model.showUser.Family</dd>
                            <dt>استان و  شهر :</dt>
                            <dd>@Model.showUser.Ostan / @Model.showUser.City</dd>
                            <dt>ایمیل :</dt>
                            <dd>@Model.showUser.Email</dd>
                            <dt>شماره تماس :</dt>
                            <dd>@Model.showUser.PhoneNumber</dd>
                            <dt>آدرس :</dt>
                            <dd>@Model.showUser.Address</dd>
                            <dt>کد پستی :</dt>
                            <dd>@Model.showUser.PostalCode</dd>
                            <dt>تاریخ ثبت نام :</dt>
                            <dd>@Model.showUser.RegisterDate</dd>
                            <dt>کیف پول :</dt>
                            <dd>@Model.showUser.Wallet</dd>
                            <dt></dt>
                            <dd>
                                <input type="submit" value="حذف شخص" class="btn btn-danger"/>
                            </dd>
                        </dl>
                    </form>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
</div>
