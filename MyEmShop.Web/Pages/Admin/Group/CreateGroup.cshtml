@page "{id?}"
@model MyEMShop.EndPoint.Pages.Admin.Group.CreateGroupModel
@{
    ViewData["Title"] = "افزودن گروه و زیرگروه";
}
<div id="page-wrapper">
    <div class="row">
        <form method="post">
            <input type="hidden" asp-for="group.ParentId"/>
            <div class="col-lg-8">
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        اطلاعات گروه
                    </div>

                    <div class="panel-body">
                        <div class="form-group">
                            <label>عنوان گروه</label>
                            <input type="text" asp-for="group.GroupTitle" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-success">ثبت گروه جدید</button>

                    </div>
                    <div class="panel-footer">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
