@page
@model MyEMShop.EndPoint.Pages.Admin.Slider.IndexModel
@{
    ViewData["Title"] = "لیست اسلایدر ها";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">اسلایدرها</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    مدیریت اسلایدر ها
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="col-md-12" style="margin:10px 0;">
                        <a asp-page="CreateSlider" class="btn btn-success">افزودن اسلایدر جدید</a>
                    </div>

                    <div class="col-lg-12">
                        <div class="panel panel-default col-md-12">
                            <div class="panel-heading">
                                نمایش اسلایدر ها
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="table-responsive ">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>اسلایدر</th>
                                                <th>عملیات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Sliders)
                                            {
                                                <tr>
                                                    <td>
                                                        <img src="/Template/image/slider/@item.SliderImageName" class="thumbnail" style="max-height:100px;" />
                                                    </td>
                                                    <td>
                                                        <a asp-page="DeleteSlider" class="btn btn-danger btn-sm" asp-route-id="@item.SliderId">حذف</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
