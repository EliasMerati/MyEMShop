@page
@model MyEMShop.EndPoint.Pages.Admin.Faqs.IndexModel
@{
    ViewData["Title"] = "مدیریت سوال ها ";
}



<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> سوال ها</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    مدیریت سوال ها
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <div class="row">
                            </div>
                            <div class="col-md-12" style="margin:10px 0;">
                                <a asp-page="AddFaq" class="btn btn-success">افزودن سوال جدید</a>
                            </div>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 160.4px;">
                                            متن سوال
                                        </th>
                                          <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 250.4px;">
                                            جواب سوال
                                        </th>
                                          <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 80.4px;">
                                            گروه سوال
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 128.4px;">
                                            عملیات
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Faq)
                                    {
                                        <tr class="gradeA">
                                            <td class="center">@item.FaqQuestion</td>
                                            <td class="center">@item.FaqAnswer</td>
                                            <td class="center">@item.FaqGroup.FaqGroupTitle</td>
                                            <td class="center">
                                                <a asp-page="UpdateFaq" asp-route-id="@item.FaqId" class="btn btn-sm btn-warning">ویرایش</a>
                                                <a asp-page="DeleteFaq" asp-route-id="@item.FaqId" class="btn btn-sm btn-danger">حذف</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->
</div>
