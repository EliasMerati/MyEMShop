@page "{id}"
@model MyEMShop.EndPoint.Pages.Admin.Faqs.UpdateFaqModel
@{
    ViewData["Title"] = "ویرایش سوال جدید";
}

<div id="page-wrapper">
    <div class="row">
        <form method="post">
            <input type="hidden" asp-for="@Model.Faq.FaqId" />
            <div class="col-lg-8">
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        اطلاعات سوال
                    </div>
                    <div class="panel-body">
                        <h3>اطلاعات سوال</h3>
                        <hr />
                        <div class="form-group">
                            <label>گروه سوال</label>
                            <select class="form-control" asp-for="Faq.FaqGroupId" asp-items="@(ViewData["Groups"] as SelectList)"></select>
                        </div>
                        <div class="form-group">
                            <label>عنوان سوال</label>
                            <input type="text" asp-for="Faq.FaqQuestion" class="form-control">
                            <span asp-validation-for="Faq.FaqQuestion"></span>
                        </div>
                        <div class="form-group">
                            <label>جواب سوال</label>
                            <input type="text" asp-for="Faq.FaqAnswer" class="form-control">
                            <span asp-validation-for="Faq.FaqAnswer"></span>
                        </div>
                        <button type="submit" class="btn btn-warning">ویرایش سوال و جواب </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
