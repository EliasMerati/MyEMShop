@page
@using MyEMShop.Application.Interfaces;
@model MyEMShop.EndPoint.Pages.Admin.ContactUsInfo.IndexModel
@inject IContactUsInfoService _contactUsInfo
@{
    ViewData["Title"] = "مدیریت اطلاعات تماس با ما";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">اطلاعات تماس با ما</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    اطلاعات تماس با ما
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <div class="row">
                            </div>
                            <div class="col-md-12" style="margin:10px 0;">
                                @if (!_contactUsInfo.IsExistContactUsInfo())
                                {
                                    <a asp-page="AddContactUsInfo" class="btn btn-success">افزودن اطلاعات تماس با ما</a>
                                }
                            </div>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 80px;">
                                            عکس تماس با ما
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 80px;">
                                            شماره تلفن
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 80px;">
                                            ساعت کاری
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 200px;">
                                            آدرس
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 150px;">
                                            توضیحات مختصر
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 50px;">
                                            دستورات
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="gradeA">
                                        @if (_contactUsInfo.IsExistContactUsInfo())
                                        {
                                            <td class="center">
                                                <img src="/Template/image/ContactUsInfo/@Model.ContactUsInfo.ContactUsImage" class="thumbnail" style="height:100px;" />
                                            </td>
                                            <td class="center">@Model.ContactUsInfo.ContactUsPhone</td>
                                            <td>@Model.ContactUsInfo.ContactUsWorkTime</td>
                                            <td>@Model.ContactUsInfo.ContactUsOstanCity - @Model.ContactUsInfo.ContactUsAddress - @Model.ContactUsInfo.ContactUsPelak</td>
                                            <td>@Model.ContactUsInfo.ContactUsDesc</td>
                                            <td class="center">
                                                <a asp-page="EditContactUsInfo" class="btn btn-warning btn-sm" asp-route-id="@Model.ContactUsInfo.ContactUsInfoId">ویرایش</a>
                                            </td>
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->
</div>
