@page "{id}"
@model MyEMShop.EndPoint.Pages.Admin.Product.RefreshProductModel
@{
    ViewData["Title"] = "بازگردانی محصول";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    بازگردانی محصول
                </div>
                <div class="panel-body">
                    <form method="post">
                        <input type="hidden" name="productId" value="@ViewData["id"].ToString()" />
                        <dl class="dl-horizontal">
                            <dt>نام محصول :</dt>
                            <dd>@Model.refresh.ProductTitle</dd>
                            <dt>قیمت محصول :</dt>
                            <dd>@Model.refresh.ProductPrice</dd>
                            <dt></dt>
                            <dd>
                                <input type="submit" value="بازگردانی محصول" class="btn btn-primary"/>
                            </dd>
                        </dl>
                    </form>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
</div>