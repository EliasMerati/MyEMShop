@model MyEMShop.Data.Dtos.ProductDto.ShowProductForIndex
<div class="product-layout product-grid col-lg-3 col-md-3 col-sm-4 col-xs-12">
    <div class="product-thumb clearfix">
        <div class="image"><a href="product.html"><img src="/Template/image/product/MainPicThumbnail/@Model.MainImageProduct" alt="@Model.ProductTitle" title="@Model.ProductTitle" class="img-responsive"></a></div>
        <div class="caption">
            <h4><a href="product.html">@Model.ProductTitle</a></h4>
            <p class="price"><span class="price-new">@Model.ProductPrice تومان</span> <span class="price-old">122000 تومان</span><span class="saving">-10%</span><span class="price-tax">بدون مالیات : @Model.ProductPrice تومان</span></p>
        </div>
        <div class="button-group">
            <button class="btn-primary" type="button" onclick=""><span>افزودن به سبد</span></button>
            <div class="add-to-links">
                <button type="button" data-toggle="tooltip" title="افزودن به علاقه مندی ها" onClick=""><i class="fa fa-heart"></i></button>
                <button type="button" data-toggle="tooltip" title="مقایسه این محصول" onClick=""><i class="fa fa-exchange"></i></button>
            </div>
        </div>
    </div>
</div>





