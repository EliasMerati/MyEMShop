@model IEnumerable<MyEMShop.Data.Dtos.ProductDto.ShowProductForIndex>
@using MyEMShop.Data.Entities.Product
@{
    ViewData["Title"] = "خانه";
}
@section Banner
    {
    <partial name="_Banner" />

}
@section Slider
