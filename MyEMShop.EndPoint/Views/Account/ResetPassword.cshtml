@model MyEMShop.Data.Dtos.UserDto.ResetPasswordDto

@{
    ViewData["Title"] = "تغییر کلمه ی عبور";
}
@section MetaTag
    {
        <meta name="description" content=" @ViewData["Title"] _ فروشگاه پوشاک زنانه به دخت">
    <link rel="canonical" href="https://behdokhtcollection.ir/@ViewData["Title"]" />
}
<ul class="breadcrumb">
    <li><a href="/"><i class="fa fa-home"></i></a></li>
    <li><a href="/Login">ورود</a></li>
    <li><a href="/Register">ثبت نام</a></li>
</ul>
<div>
    <h2 class="subtitle">عملیات کلمه ی عبور</h2>
    <p><strong>تغییر کلمه ی  عبور</strong></p>
    <form class="form-horizontal col-sm-6" method="post">
        <input type="hidden" asp-for="Activecode" />
        <div class="form-group ">
            <label asp-for="Password" class="control-label" for="input-password">کلمه ی عبور جدید</label>
            <input asp-for="Password" type="password" name="password"  placeholder="کلمه ی عبور جدید" id="input-password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="RePassword" class="control-label" for="input-password">تکرار کلمه ی عبور جدید</label>
            <input asp-for="RePassword" type="password" name="Repassword"  placeholder="تکرار کلمه ی عبور جدید" id="input-password" class="form-control">
            <span asp-validation-for="RePassword" class="text-danger"></span>
        </div>
        <input type="submit" value="تغییر کلمه ی عبور" class="btn btn-primary">
    </form>
    
</div>

