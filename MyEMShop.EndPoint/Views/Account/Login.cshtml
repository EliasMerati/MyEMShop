@model MyEMShop.Data.Dtos.UserDto.LoginDto
@{
    ViewData["Title"] = "ورود به سایت";
}
@section MetaTag
    {
    <meta property="description" content=" @ViewData["Title"] _ فروشگاه پوشاک زنانه به دخت">
    <link rel="canonical" href="https://behdokhtcollection.ir/@ViewData["Title"]" />
}
<ul class="breadcrumb">
    <li><a href="/"><i class="fa fa-home"></i></a></li>
    <li><a href="/Register"> ثبت نام</a></li>
    <li><a href="/Login">ورود</a></li>
</ul>

<div id="content" class="col-sm-9">
    <h1 class="title">حساب کاربری ورود</h1>
    <div class="row">
        <div class="col-sm-6">
            <h2 class="subtitle">مشتری جدید</h2>
            <p><strong>ثبت نام حساب کاربری</strong></p>
            <p>با ایجاد حساب کاربری میتوانید سریعتر خرید کرده، از وضعیت خرید خود آگاه شده و تاریخچه ی سفارشات خود را مشاهده کنید.</p>
            <a href="/Register" class="btn btn-primary">ادامه</a>
        </div>
        <div class="col-sm-6">
            <h2 class="subtitle">مشتری قبلی</h2>
            <p><strong>من از قبل مشتری شما هستم</strong></p>
            <form class="form-horizontal" method="post">
                <div class="form-group">
                    <label asp-for="Email" class="control-label">آدرس ایمیل</label>
                    <input asp-for="Email" type="text" name="email"  placeholder="آدرس ایمیل" id="input-email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label" for="input-password">رمز عبور</label>
                    <input asp-for="Password" type="password" name="password"  placeholder="رمز عبور" id="input-password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <br>           
                    <a href="/ForgotPassword">فراموشی رمز عبور</a>
                </div>
                <div class="form-group">
                    <label asp-for="IsPersistence" >مرا به خاطر بسپار</label>
                    <input asp-for="IsPersistence"  type="checkbox" name="agree">
                </div>
                <input type="submit" value="ورود" class="btn btn-primary">
            </form>

        </div>
    </div>
</div>