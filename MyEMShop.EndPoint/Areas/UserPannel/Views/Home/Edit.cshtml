@model MyEMShop.Data.Dtos.UserDto.ShowUserInfoForEditPannelDto
@{
    ViewData["Title"] = "ویرایش پنل کاربری";
}

<div id="container">
    <div class="container">
        <!-- Breadcrumb Start-->
        <ul class="breadcrumb">
            <li><a href="/"><i class="fa fa-home"></i></a></li>
            <li><a href="/LogOut">خروج</a></li>
        </ul>
        <!-- Breadcrumb End-->
        <div class="row">
            <!--Middle Part Start-->
            <div class="col-sm-9" id="content">
                <form class="form-horizontal" method="post" asp-action="Edit">
                    <fieldset id="account">
                        <legend>اطلاعات شخصی شما</legend>
                        <div style="display: none;" class="form-group required">
                            <label class="col-sm-2 control-label">گروه مشتری</label>
                            <div class="col-sm-9">
                                <div class="radio">
                                    <label>
                                        <input type="radio" checked="checked" value="1" name="customer_group_id">
                                        پیشفرض
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group ">
                            <label  asp-for="Name" class="col-sm-2 control-label">نام</label>
                            <div class="col-sm-9">
                                <input type="text" asp-for="Name" class="form-control" id="Name" placeholder="نام"  name="Name">
                            </div>
                        </div>
                        <div class="form-group ">
                            <label  asp-for="Family" class="col-sm-2 control-label">نام خانوادگی</label>
                            <div class="col-sm-9">
                                <input type="text" asp-for="Family" class="form-control" id="family" placeholder="نام خانوادگی"  name="family">
                            </div>
                        </div>
                        <div class="form-group ">
                            <label  asp-for="PhoneNumber" class="col-sm-2 control-label">شماره تلفن</label>
                            <div class="col-sm-9">
                                <input type="tel" asp-for="PhoneNumber" class="form-control" id="phonenumber" placeholder="شماره تلفن"  name="phonenumber">
                            </div>
                        </div>
                    </fieldset>
                    <fieldset id="address">
                        <legend>آدرس</legend>
                        <div class="form-group ">
                            <div class="form-group ">
                                <label  asp-for="Ostan" class="col-sm-2 control-label">استان</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="Ostan" class="form-control" id="ostan" placeholder="استان"  name="ostan">
                                </div>
                            </div>
                            <div class="form-group ">
                                <label  asp-for="City" class="col-sm-2 control-label">شهر</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="City" class="form-control" id="city" placeholder="شهر"  name="city">
                                </div>
                            </div>
                            <div class="form-group ">
                                <label  asp-for="PostalCode" class="col-sm-2 control-label">کد پستی</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="PostalCode" class="form-control" id="postalcode" placeholder="کد پستی"  name="postalcode">
                                </div>
                            </div>
                            <div class="form-group ">
                                <label  asp-for="Address" class="col-sm-2 control-label">آدرس</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="Address" class="form-control" id="address" placeholder="آدرس"  name="address">
                                </div>
                            </div>
                        </div>
                    </fieldset>
@*                    <fieldset>
                        <legend>خبرنامه</legend>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">اشتراک</label>
                            <div class="col-sm-10">
                                <div class="col-sm-10">
                                    <label class="radio-inline">
                                        <input type="radio" value="1" name="newsletter">
                                        بله
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" checked="checked" value="0" name="newsletter">
                                        نه
                                    </label>
                                </div>
                            </div>
                        </div>
                    </fieldset>*@
                    <div class="buttons">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-primary" value="ویرایش">
                        </div>
                    </div>
                </form>
            </div>
            <!--Middle Part End -->
            <!--Right Part Start -->
            <partial name="_SideBar" />
            <!--Right Part End -->
        </div>
    </div>
</div>

