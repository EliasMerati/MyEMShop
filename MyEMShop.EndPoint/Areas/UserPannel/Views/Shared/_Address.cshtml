@using MyEMShop.Application.Interfaces
@inject IUserPannelService _userService
@{
    var address = _userService.GetUserAddressForOrder(User.Identity.Name);
}
<div id="collapse-shipping" class="panel-collapse collapse in">
    <div class="panel-body">
        @if (address.Address is null || address.Ostan is null || address.PostalCode is null || address.City is null)
        {
            <div class="alert alert-warning"><i class="fa fa-warning"></i> لطفا از منوی کاربری آدرس خود را تکمیل کنید</div>
        }
        else
        {
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-zone">شهر / استان</label>
                <div class="col-sm-10">
                    <input type="text" name="postcode" value="@address.Ostan - @address.City" placeholder="استان / شهر" id="input-postcode" class="form-control">
                </div>
            </div>
            <br />
            <br />
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-country">آدرس</label>
                <div class="col-sm-10">
                    <input type="text" name="postcode" value="@address.Address" placeholder="آدرس" id="input-postcode" class="form-control">
                </div>
            </div>
            <br />
            <br />
            <div class="form-group required">
                <label class="col-sm-2 control-label" for="input-postcode">کد پستی</label>
                <div class="col-sm-10">
                    <input type="text" name="postcode" value="@address.PostalCode" placeholder="کد پستی" id="input-postcode" class="form-control">
                </div>
            </div>
        }



        @*  <input type="button" value="دریافت پیش فاکتور" id="button-quote" data-loading-text="بارگذاری ..." class="btn btn-primary">*@

    </div>
</div>
