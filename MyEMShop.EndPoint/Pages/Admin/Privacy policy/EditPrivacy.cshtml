@page "{id}"
@model MyEMShop.EndPoint.Pages.Admin.Privacy_policy.EditPrivacyModel
@{
    ViewData["Title"] = "ویرایش اطلاعات حریم خصوصی";
}

<div id="page-wrapper">
    <div class="row">
        <form method="post">
            <input type="hidden" asp-for="Privacy.PrivacyId" />
            <div class="col-lg-12">
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        ویرایش اطلاعات حریم خصوصی
                    </div>

                    <div class="panel-body">
                        <h3>اطلاعات حریم خصوصی</h3>
                        <hr />
                        <div class="form-group">
                            <label> اطلاعات حریم خصوصی</label>
                            <textarea type="text" asp-for="Privacy.PrivacyText" rows="4" class="form-control"></textarea>
                            <span asp-validation-for="Privacy.PrivacyText"></span>
                        </div>
                        <button type="submit" class="btn btn-warning"> ویرایش اطلاعات حریم خصوصی  </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{

    <script src="https://cdn.ckeditor.com/4.21.0/full/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('Privacy_PrivacyText', {
            customConfig: '/js/Config.js'
        });
    </script>
}