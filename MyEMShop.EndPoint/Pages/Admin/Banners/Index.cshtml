@page
@model MyEMShop.EndPoint.Pages.Admin.Banners.IndexModel
@{
    ViewData["Title"] = "مدیریت بنرهای کوچک";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">بنر های کوچک سایت</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    مدیریت بنر های کوچک سایت
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <div class="row">
                            </div>
                            <div class="col-md-12" style="margin:10px 0;">
                                <a asp-page="CreateBanner" class="btn btn-success">افزودن بنر راست جدید</a>
                                <a asp-page="CreateBanner" class="btn btn-success">افزودن بنر وسط راست جدید</a>
                                <a asp-page="CreateBanner" class="btn btn-success">افزودن بنر وسط چپ جدید</a>
                                <a asp-page="CreateBanner" class="btn btn-success">افزودن بنر چپ جدید</a>
                            </div>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 180px;">
                                            نام بنر
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 80px;">
                                            عکس بنر
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 150px;">
                                            لینک بنر
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 200px;">
                                            دستورات
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Banner)
                                    {
                                        <tr class="gradeA">
                                            <td class="center">@item.BannerName</td>
                                            <td class="center">
                                                <img src="/Template/image/banner/@item.BannerImage" class="thumbnail" style="max-height:100px;" />
                                            </td>
                                            <td>@item.BannerLink</td>
                                            <td class="center">
                                                <a asp-page="EditBanner" class="btn btn-warning btn-sm" asp-route-id="@item.BannerId">ویرایش</a>
                                                <a asp-page="DeleteBanner" class="btn btn-danger btn-sm" asp-route-id="@item.BannerId">حذف</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->
</div>
