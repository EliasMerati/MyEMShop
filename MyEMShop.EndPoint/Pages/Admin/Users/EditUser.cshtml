@page "{id}"
@model MyEMShop.EndPoint.Pages.Admin.Users.EditUserModel
@{
    ViewData["Title"] = "ویرایش کاربران";
    IList<Role> roles = ViewData["Roles"] as IList<Role>;
}
<div id="page-wrapper">
    <div class="row">
        <form method="post">
            <div class="col-lg-8">
                <div class="panel panel-warning">
                    <div class="panel-heading">
                         اطلاعات کاربر
                    </div>

                    <div class="panel-body">
                        <input type="hidden" asp-for="editUser.UserId" />
                          <div class="form-group">
                            <label>نام کاربری</label>
                            <lable class="text-success"><strong>@Model.editUser.UserName </strong></lable>
                        </div>
                        <div class="form-group">
                            <label>نام</label>
                            <input type="text" asp-for="editUser.Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>نام خانوادگی</label>
                            <input type="text" asp-for="editUser.Family" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>ایمیل</label>
                            <input type="text" asp-for="editUser.Email" class="form-control">
                        </div>
                        <span asp-validation-for="editUser.Email" class="text-danger"></span>
                        <div class="form-group">
                            <label>کلمه ی عبور</label>
                            <input type="text" asp-for="editUser.Password" class="form-control">
                        </div>
                        <span asp-validation-for="editUser.Password" class="text-danger"></span>
                        <button type="submit" class="btn btn-warning"><strong>ویرایش کاربر </strong></button>

                    </div>
                    <div class="panel-footer">
                    </div>
                </div>
            </div>
            <!-- /.col-lg-4 -->
            <div class="col-lg-4">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        نقش های کاربر
                    </div>
                    <div class="panel-body">
                        @foreach (var item in roles)
                        {
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="SelectedRoles" value="@item.RoleId" @((Model.editUser.UserRoles.Any(r=> r== item.RoleId))?"Checked":"")>@item.RoleName
                                </label>
                            </div>
                        }
                    </div>
                    <div class="panel-footer">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

