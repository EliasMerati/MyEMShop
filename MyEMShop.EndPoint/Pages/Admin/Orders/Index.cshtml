@page 
@using MyEMShop.Data.Dtos.OrderState
@model MyEMShop.EndPoint.Pages.Admin.Orders.IndexModel
@{
    ViewData["Title"] = "مدیریت سفارشات ";
}



<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">سفارشات</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    مدیریت سفارشات
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <div class="row">
                            </div>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 30px;">
                                            شماره سفارش
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 30px;">
                                            تاریخ ثبت سفارش
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 70px;">
                                            وضعیت سفارش
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 200px;">
                                            آدرس 
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 180px;">
                                            عملیات
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Orders)
                                    {
                                        <tr class="gradeA">
                                            <td class="center">@item.OrderId</td>
                                            <td class="center">@item.InsertTime.ToShamsi()</td>
                                            <td class="center">
                                                @{
                                                    string State = EnumHelpers<OrderState>.GetDisplayValue(item.OrderState);
                                                }
                                                @State
                                            </td>
                                            <td class="center">@item.OrderAddress</td>
                                            <td class="center">
                                                <a asp-area="UserPannel" asp-controller="Order" asp-action="ShowOrderForAdmin" asp-route-orderId="@item.OrderId" asp-route-userId="@item.UserId" class="btn btn-sm btn-default"> مشاهده ی فاکتور</a>
                                                <a asp-area="UserPannel" asp-controller="Order" asp-action="PrintPage" asp-route-id="@item.OrderId"  asp-route-userId="@item.UserId" class="btn btn-sm btn-primary"> چاپ فاکتور</a>
                                                @if (item.OrderState == OrderState.IsReady)
                                                {
                                                    <a disabled class="btn btn-sm btn-warning">آماده ارسال</a>
                                                    <a asp-area="UserPannel" asp-controller="Order" asp-action="ChangeToIsSend" asp-route-orderId="@item.OrderId" class="btn btn-sm btn-success">ارسال شده</a>
                                                }
                                                @if (item.OrderState == OrderState.IsSend)
                                                {
                                                    <a disabled class="btn btn-sm btn-warning">آماده ارسال</a>
                                                    <a disabled class="btn btn-sm btn-success">ارسال شده</a>
                                                }
                                                @if (item.OrderState == OrderState.IsProgress)
                                                {
                                                    <a asp-area="UserPannel" asp-controller="Order" asp-action="ChangeToIsSend" asp-route-orderId="@item.OrderId" class="btn btn-sm btn-success">ارسال شده</a>
                                                    <a asp-area="UserPannel" asp-controller="Order" asp-action="ChangeToIsReady" asp-route-orderId="@item.OrderId" class="btn btn-sm btn-warning">آماده ارسال</a>
                                                    <a asp-area="UserPannel" asp-controller="Order" asp-action="ChangeToIsCancelled" asp-route-orderId="@item.OrderId" class="btn btn-sm btn-danger">لغو فاکتور</a>
                                                }

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->

            <nav aria-label="...">
                <ul class="pagination">
                    @for (int i = 1; i <= ((int)ViewData["rowsCount"] + 1); i++)
                    {
                        <li class="@(((int)ViewData["pageId"] == i)?"active":"")"><a href="/Admin/Orders?pageId=@i&&orderState=@ViewData["state"]">@i<span class="sr-only">(current)</span></a></li>
                    }
                </ul>
                
            </nav>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->
</div>
