@page "{id}"
@model MyEMShop.EndPoint.Pages.Admin.Term.UpdateTermModel
@{
    ViewData["Title"] = "ویرایش شرایط و قوانین";
}

<div id="page-wrapper">
    <div class="row">
        <form method="post">
            <input type="hidden" asp-for="Term.TermId" />
            <div class="col-lg-12">
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        ویرایش شرایط و قوانین
                    </div>

                    <div class="panel-body">
                        <h3>شرایط و قوانین</h3>
                        <hr />
                        <div class="form-group">
                            <label> شرایط و قوانین</label>
                            <textarea type="text" asp-for="Term.TermDescription" rows="4" class="form-control"></textarea>
                            <span asp-validation-for="Term.TermDescription"></span>
                        </div>
                        <button type="submit" class="btn btn-warning"> ویرایش شرایط و قوانین  </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
    {

    <script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('Term_TermDescription', {
            customConfig: '/js/Config.js'
        });
    </script>
}
