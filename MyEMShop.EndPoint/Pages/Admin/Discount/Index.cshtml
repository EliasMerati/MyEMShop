@page
@model MyEMShop.EndPoint.Pages.Admin.Discount.IndexModel
@{
    ViewData["Title"] = "لیست تخفیف ها";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">تخفیف ها</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    مدیریت تخفیف ها
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <div class="row">
                            </div>
                            <div class="col-md-12" style="margin:10px 0;">
                                <a asp-page="CreateDiscount" class="btn btn-success">افزودن تخفیف جدید</a>
                            </div>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 201.4px;">
                                            کد تخفیف
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 201.4px;">
                                            درصد تخفیف
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 201.4px;">
                                            تعداد تخفیف
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 201.4px;">
                                            تاریخ شروع تخفیف
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 201.4px;">
                                            تاریخ پایان تخفیف
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 128.4px;">
                                            عملیات
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Discounts)
                                    {
                                        <tr class="gradeA">
                                            <td class="center">@item.DiscountCode</td>
                                            <td class="center">@item.DiscountPercent</td>
                                            <td class="center">@item.UsableCount</td>
                                            <td class="center">@((item.StartDate is not null) ? item.StartDate.Value.ToShamsi() : "")</td>
                                            <td class="center">@((item.EndDate is not null) ? item.EndDate.Value.ToShamsi() : "")</td>
                                            <td class="center">
                                                <a href="/Admin/Discount/EditDiscount/@item.DiscountId" class="btn btn-sm btn-warning">ویرایش</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
            <nav class="text-center" aria-label="...">
                <ul class="pagination">
                    @for (int i = 1; i <= ((int)ViewData["rowsCount"] + 1); i++)
                    {
                        <li class="@(((int)ViewData["pageId"] == i)?"active": "")"><a href="/Admin/Comments?pageId=@i">@i<span class="sr-only">(current)</span></a></li>
                    }
                </ul>
            </nav>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->
</div>