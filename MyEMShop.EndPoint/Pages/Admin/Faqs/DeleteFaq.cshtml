@page "{id}"
@model MyEMShop.EndPoint.Pages.Admin.Faqs.DeleteFaqModel
@{
    ViewData["Title"] = "حذف سوال و جواب";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    حذف سوال و جواب
                </div>
                <div class="panel-body">
                    <form method="post">
                        <input type="hidden" asp-for="@Model.Faq.FaqId" />
                        <dl class="dl-horizontal">
                            <dt> سوال :</dt>
                            <dd>
                                <input type="text" class="form-control" asp-for="@Model.Faq.FaqQuestion" />
                            </dd>
                             <dt> جواب :</dt>
                            <dd>
                                <input type="text" class="form-control" asp-for="@Model.Faq.FaqAnswer" />
                            </dd>
                            <dt></dt>
                            <dd>
                                <input type="submit" value="حذف سوال و جواب" class="btn btn-danger" />
                            </dd>
                        </dl>
                    </form>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
</div>
