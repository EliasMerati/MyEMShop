@page
@using MyEMShop.Application.Interfaces
@model MyEMShop.EndPoint.Pages.Admin.Tax.IndexModel
@inject ITaxService _Tax
@{
    ViewData["Title"] = "مشاهده ی  مالیات";
    bool tax = _Tax.IsExistTax();
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">مالیات</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    مدیریت مالیات
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <div class="row">
                            </div>
                            <div class="col-md-12" style="margin:10px 0;">
                                @if (tax)
                                {
                                    
                                }
                                else
                                {
                                    <a asp-page="CreateTax" class="btn btn-success">افزودن مالیات جدید</a>
                                }
                                
                            </div>
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" aria-sort="ascending" style="width: 201.4px;">
                                            مقدار مالیات به درصد
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 128.4px;">
                                            عملیات
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                        @foreach (var item in Model.Tax)
                                    {
                                        <tr class="gradeA">
                                            <td class="center">@item.TaxValue</td>
                                            <td class="center">
                                            <a href="/Admin/Tax/UpdateTax/@item.TaxId" class="btn btn-sm btn-warning">ویرایش</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->
</div>