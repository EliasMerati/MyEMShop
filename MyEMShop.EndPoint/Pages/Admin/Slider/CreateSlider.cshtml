@page
@model MyEMShop.EndPoint.Pages.Admin.Slider.CreateSliderModel
@{
    ViewData["Title"] = "افزودن اسلایدر";
}

<div id="page-wrapper">
    <div class="row">
        <form  method="post" enctype="multipart/form-data">
            <div class="col-lg-8">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        عکس  اسلایدر
                    </div>
                    <div class="panel-body">
                        <img id="ImgSlider" class="thumbnail" src="/Template/image/slider/" />
                        <div class="form-group">
                            <lable>تصویر اسلایدر</lable>
                            <input type="file" id="MainimgSliderUp" name="MainimgSlider" asp-for="Slider.SliderImageName" />
                        </div>
                        <button type="submit" class="btn btn-success">ثبت اسلایدر </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts
    {
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#ImgSlider').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#MainimgSliderUp").change(function () {
            readURL(this);
        });
    </script>
}